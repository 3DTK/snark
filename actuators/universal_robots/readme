start status daemon:
socat -T 5 -u tcp:ladybird.arm:30003 - | ur-arm-status --binary | io-publish -s 322 tcp:9998

monitor its output:
nc localhost 9998 | ur-arm-status --host-byte-order --fields=timestamp,robot_mode,joint_modes

start control daemon:
socat EXEC:"ur-arm-control --config=/home/veggie/src/snark/actuators/universal_robots/examples/robot-arm.json --id 7 --robot-arm-host=ladybird.arm --robot-arm-port=30002 --feedback-host=localhost --feedback-port=9998" tcp-listen:9999,reuseaddr,fork

send commands to control daemon:
echo ">7,101,power,1" | nc localhost 9999
echo ">7,101,brakes,1" | nc localhost 9999
wait a few seconds
echo ">7,101,brakes,0" | nc localhost 9999
echo ">7,101,auto_init" | nc localhost 9999 # all joints or do joints separately (see next command)
echo ">7,101,initj,3,1" | nc localhost 9999 # single joint 3 in direction 1
echo ">7,101,power,0" | nc localhost 9999
